doctype html
html(lang='ko')
    head 
        title #{pageTitle} | 흙타
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
        block css
    body 
        header 
            nav.nav 
                ul 
                    li 
                        a(href="/") 흙타
                    li
                        a(href="/") 팀흙타 채용&rarr;
                    li 
                        a(href="/content/upload") 글쓰기 
                    if loggedIn
                        li 
                            a(href="/users/edit") 프로필 수정
                        li 
                            a(href="/users/logout") 로그아웃
                        li 
                            a(href=`/users/${loggedInUser._id}`) 내 정보
                    else 
                        li 
                            a(href="/login") 로그인

            input(placeholder="관심있는 내용을 검색해보세요", type="text", name="keyword")

        main 
            div
                block contentMain
            div.topicBackground
                block contentSub

    hr
    include partials/footer.pug
    block scripts
